<% layout("layouts/boilerplate")%>
<div class="row">
  <div class="col-8 offset-2">
    <br><br>
    <h3>Create a New Capsule</h3>
    
    <form method="POST" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">

      <div class="md-3">
        <label for="title" class="form-label">Title</label>
        <input name="listing[title]" placeholder="Name Your Capsule" type="text" class="form-control" required />
        <div class="invalid-feedback">Please Enter Title</div>
      </div>
      
      <div class="md-3">
        <label for="description" class="form-label">Message</label>
        <textarea
          name="listing[description]"
          class="form-control"
          required
        ></textarea>
        <div class="invalid-feedback">Please Enter your Message for the future</div>
      </div>
      
      <div class="md-3">
        <label for="media" class="form-label">Upload Image</label>
        <input
          name="listing[image]"
          type="file"
          class="form-control"
          accept="image/*"
        />
        <small class="text-muted">You can upload an image.</small>
      </div>
      
      <div class="md-3">
        <label for="unlockDate" class="form-label">Unlock Date & Time</label>
        <input
          type="datetime-local"
          name="listing[unlockDate]"
          id="unlockDate"
          class="form-control"
          required
          min=""
        />
        <div class="invalid-feedback">Please select a future unlock date and time</div>
      </div>
      
      <br /><br />
      <button class="btn btn-outline-dark1">Add</button>
      <br><br>
    </form>
  </div>
</div>
<style>
  .btn-outline-dark1 {
    background-color:#853cfa;
    color: white;
}
   
</style>
<script>
  // Set the minimum date and time to the current date and time to prevent past selections
  document.addEventListener('DOMContentLoaded', () => {
      const unlockDateInput = document.getElementById('unlockDate');
      const now = new Date();
      now.setMinutes(now.getMinutes() - now.getTimezoneOffset());
      unlockDateInput.min = now.toISOString().slice(0, 16); // 'YYYY-MM-DDTHH:mm' format
  });
</script>
